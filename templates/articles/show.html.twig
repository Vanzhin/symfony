{% extends 'base.html.twig' %}
{% block title %} {{ parent() }} {{ article.title|slice(0,20) }} {% endblock %}
{% block body %}
    <div class="p-5 mb-4 bg-light rounded-3">
        <div class="d-flex flex-column">
            <div class="">
                <img src="{{ asset(article.imagePath) }}" class="rounded mx-auto d-block img-fluid" width="400" style="object-fit: cover" alt="123">
            </div>
            <div class="container-fluid py-5">
                <h1 class="display-5 fw-bold">{{ article.title }}</h1>
                <p class="col-md-8 fs-4">{{ article.content }}</p>
                <span class="text-black">{{ article.publishedAt|timeAgo }}</span>
                <span class="text-muted">{{ article.author }}</span>
                {{ include('components/likeButton.html.twig', {'likesCount': article.likeCount, 'slug': article.slug}) }}
            </div>
        </div>

    </div>
    <div class="d-flex flex-column gap-1 mb-2">
        {% for comment in article.comments %}
            <div class="col">
                <div class="card shadow-sm">
                    <div class="card-header">
                        <span class="text-black">{{ comment.createdAt|timeAgo }}</span>
                        <span class="text-muted">{{ comment.authorName }}</span>
                        {% if comment.deletedAt %}
                        <span class="text-muted">deleted</span>
                        {% endif %}
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{ comment.content }}</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-outline-secondary">Delete</button>
                                <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                            </div>
                            <small class="text-muted">9 mins</small>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock body %}
